{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // Thêm ánh xạ đường dẫn cho react-native-calendars
    "paths": {
      // Đường dẫn cũ của bạn
      "@/*": [
        "./*"
      ],
      // Đường dẫn mới: Buộc TypeScript tìm Calendar tại đây
      "react-native-calendars": [
        "./node_modules/react-native-calendars"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
, "scripts/seedData.js"  ]
}